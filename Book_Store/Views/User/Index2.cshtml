@model Book_Store.Models.UserViewModel
@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<style>
    .error {
        color: red;
    }
</style>
@if (TempData["registermessage"] != null)
{
    <script>alert('@TempData["registermessage"]');</script>
}
@if (TempData["loginerrormessage"] != null)
{
    <script>alert('@TempData["loginerrormessage"]');</script>
}
<div class="main-container">
    <div class="main-content">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="login-container">
                    <div class="center">
                        <h1>
                            <i class="ace-icon fa fa-book green"></i>
                            <span class="red">Ace</span>
                            <span class="white" id="id-text2">Book Store</span>
                        </h1>
                    </div>

                    <div class="space-6"></div>

                    <div class="position-relative">
                        <div id="login-box" class="login-box visible widget-box no-border">
                            <div class="widget-body">
                                <div class="widget-main">
                                    <h4 class="header blue lighter bigger">
                                        <i class="ace-icon fa fa-coffee green"></i>
                                        Please Enter Your Information
                                    </h4>

                                    <div class="space-6"></div>
                                    @using (Html.BeginForm("Login", "User", FormMethod.Post, new { id = "form2" }))
                                    {
                                        <form>
                                            <fieldset>
                                                Login
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.EditorFor(model => model.Login.Email, new { htmlAttributes = new { @placeholder = "Email", @id = "tb_email", @type = "email", @class = "form-control" } })
                                                        @*<input type="text" class="form-control" placeholder="Username" />*@
                                                        <i class="ace-icon fa fa-user"></i>
                                                    </span>
                                                    <span class="block error pull-right emailError"></span>

                                                </label>

                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.EditorFor(model => model.Login.Password, new { htmlAttributes = new { @placeholder = "Password", @id = "tb_password", @type = "password", @class = "form-control" } })
                                                        @*<input type="password" class="form-control" placeholder="Password" />*@
                                                        <i class="ace-icon fa fa-lock"></i>
                                                    </span>
                                                    <span class="block error pull-right passwordError"></span>

                                                </label>

                                                <div class="space"></div>

                                                <div class="clearfix">
                                                    <button type="reset" class="width-30 pull-left btn btn-sm">
                                                        <i class="ace-icon fa fa-refresh"></i>
                                                        <span class="bigger-110">Reset</span>
                                                    </button>

                                                    <button type="submit" id="form2" class="width-65 pull-right btn btn-sm btn-success">
                                                        <span class="bigger-110">Login</span>

                                                        <i class="ace-icon fa fa-key icon-on-right"></i>
                                                    </button>
                                                </div>

                                                @* <div class="clearfix">

                                                        <button type="submit" class="width-35 pull-right btn btn-sm btn-primary">
                                                            <i class="ace-icon fa fa-key"></i>
                                                            <span class="bigger-110">Login</span>
                                                        </button>
                                                    </div>
                                                *@
                                                <div class="space-4"></div>
                                            </fieldset>
                                        </form>}


                                </div><!-- /.widget-main -->

                                <div class="toolbar clearfix">
                                    <div class="pull-right">
                                        <a href="#" data-target="#signup-box" class=" user-signup-link ">
                                            I want to register
                                            <i class="ace-icon fa fa-arrow-right"></i>
                                        </a>
                                    </div>
                                </div>
                            </div><!-- /.widget-body -->
                        </div><!-- /.login-box -->

                        <div id="signup-box" class="signup-box widget-box no-border">
                            <div class="widget-body">
                                <div class="widget-main">
                                    <h4 class="header green lighter bigger">
                                        <i class="ace-icon fa fa-users blue"></i>
                                        New User Registration
                                    </h4>

                                    <div class="space-6"></div>
                                    <p> Enter your details to begin: </p>
                                    @using (Html.BeginForm("Register", "User", FormMethod.Post,new { id="form1"}))
                                    {
                                        <form id="form1">
                                            <fieldset>
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.EditorFor(model => model.Register.FirstName, new { htmlAttributes = new { @placeholder = "First Name", @id = "fname", @class = "form-control" } })
                                                        @*<input type="text" class="form-control" placeholder="First Name" id="fname" />*@
                                                        <i class="ace-icon fa fa-user"></i>
                                                    </span>
                                                    <span class="block error pull-right fnameError"></span>
                                                </label>
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.EditorFor(model => model.Register.LastName, new { htmlAttributes = new { @placeholder = "Last Name", @id = "lname", @class = "form-control" } })
                                                        @*<input type="text" class="form-control" placeholder="Last Name" id="lname" />*@
                                                        <i class="ace-icon fa fa-user"></i>
                                                    </span>
                                                    <span class="block error pull-right lnameError"></span>
                                                </label>
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.EditorFor(model => model.Register.MobileNumber, new { htmlAttributes = new { @placeholder = "Mobile Number", @id = "phone", @class = "form-control" } })
                                                        @* <input type="text" class="form-control" placeholder="Mobile Number" id="phone" />*@
                                                        <i class="ace-icon fa fa-phone"></i>
                                                    </span>
                                                    <span class="block error pull-right mobileError"></span>

                                                </label>
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.EditorFor(model => model.Register.Email, new { htmlAttributes = new { @placeholder = "Email", @id = "email", @type = "email", @class = "form-control" } })
                                                        @* <input type="email" class="form-control" placeholder="Email" id="email" />*@
                                                        <i class="ace-icon fa fa-envelope"></i>
                                                    </span>
                                                    <span class="block error pull-right emailError"></span>

                                                </label>

                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.EditorFor(model => model.Register.Password, new { htmlAttributes = new { @placeholder = "Password", @id = "password", @type = "password", @class = "form-control" } })
                                                        @*<input type="password" class="form-control" placeholder="Password" id="password" />*@
                                                        <i class="ace-icon fa fa-lock"></i>
                                                    </span>
                                                    <span class="block error pull-right passwordError"></span>
                                                </label>
                                                <div class="block clearfix">
                                                    <div class="d-flex flex-row align-items-center justify-content-center pull-right">
                                                        <label>Show Password</label>
                                                        <input type="checkbox" id="showPassword" />
                                                    </div>
                                                </div>
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">

                                                        <input type="password" class="form-control" placeholder="Repeat password" id="confirmPassword" />
                                                        <i class="ace-icon fa fa-retweet"></i>
                                                    </span>
                                                    <span class="block error pull-right confirmPasswordError"></span>
                                                </label>
                                                <div class="space-24"></div>

                                                <div class="clearfix">
                                                    <button type="reset" class="width-30 pull-left btn btn-sm">
                                                        <i class="ace-icon fa fa-refresh"></i>
                                                        <span class="bigger-110">Reset</span>
                                                    </button>
                                                    <button type="submit" id="register" class="width-65 pull-right btn btn-sm btn-success">
                                                        <span class="bigger-110">Register</span>
                                                        <i class="ace-icon fa fa-arrow-right icon-on-right"></i>
                                                    </button>
                                                </div>
                                            </fieldset>
                                        </form>
                                    }

                                </div>

                                <div class="toolbar center">
                                    <a href="#" data-target="#login-box" class="back-to-login-link">
                                        <i class="ace-icon fa fa-arrow-left"></i>
                                        Back to login
                                    </a>
                                </div>
                            </div><!-- /.widget-body -->
                        </div><!-- /.signup-box -->
                    </div><!-- /.position-relative -->

                    <div class="navbar-fixed-top align-right">
                        <br />
                        &nbsp;
                        <a id="btn-login-dark" href="#">Dark</a>
                        &nbsp;
                        <span class="blue">/</span>
                        &nbsp;
                        <a id="btn-login-blur" href="#">Blur</a>
                        &nbsp;
                        <span class="blue">/</span>
                        &nbsp;
                        <a id="btn-login-light" href="#">Light</a>
                        &nbsp; &nbsp; &nbsp;
                    </div>
                </div>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.main-content -->
</div><!-- /.main-container -->
<!-- basic scripts -->
<!--[if !IE]> -->
<script src="~/assets/js/jquery-2.1.4.min.js"></script>
<script src="~/assets/js/script.js"></script>
