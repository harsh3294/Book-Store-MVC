@model IEnumerable<Book_Store.Models.StoreViewModel>

@{
    ViewBag.Title = "StoreInfo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>StoreInfo</h2>

<p>
    @Html.ActionLink("Create New", "AddStore")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Store_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Store_Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Store_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store_Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateStoreById", new { id = item.Store_Id }) |
                @Html.ActionLink("Details", "GetStoreById", new { id = item.Store_Id }) |
                @Html.ActionLink("Delete", "DeleteStoreById", new { id = item.Store_Id })
            </td>
        </tr>
    }

</table>
